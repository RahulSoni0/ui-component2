<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultDisplay"
    android:background="@drawable/bg_new">


    <TextView
        android:id="@+id/dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/montserrat"
        android:text="Successfully Scanned!"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dis_name"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Name of User"
        android:textColor="@color/text"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dis"
        app:layout_constraintStart_toStartOf="@+id/dis"
        app:layout_constraintTop_toBottomOf="@+id/dis" />

    <TextView
        android:id="@+id/email"
        android:layout_width="324dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Email:"
        android:textColor="@color/text"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/add_number"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/add_number"
        app:layout_constraintTop_toBottomOf="@+id/add_number" />

    <TextView
        android:id="@+id/instagram"
        android:layout_width="324dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/Linkedin"
        android:layout_width="324dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/add_insta"
        app:layout_constraintStart_toStartOf="@+id/add_insta"
        app:layout_constraintTop_toBottomOf="@+id/add_insta" />

    <Button
        android:id="@+id/add_number"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_proceed_gray"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Add to Contacts"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/number"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <TextView
        android:id="@+id/number"
        android:layout_width="324dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Phone no: "
        android:textColor="@color/text"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dis_name"
        app:layout_constraintStart_toStartOf="@+id/dis_name"
        app:layout_constraintTop_toBottomOf="@+id/dis_name" />


    <Button
        android:id="@+id/add_insta"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_proceed_gray"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Follow on Instagram"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/instagram"
        app:layout_constraintStart_toStartOf="@+id/instagram"
        app:layout_constraintTop_toBottomOf="@+id/instagram" />

    <Button
        android:id="@+id/add_LinkedIn"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_proceed_gray"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Connect in LinkedIn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/Linkedin"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/Linkedin"
        app:layout_constraintTop_toBottomOf="@+id/Linkedin" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/add_LinkedIn"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/add_LinkedIn"
        app:layout_constraintTop_toBottomOf="@+id/add_LinkedIn">

        <Button
            android:id="@+id/to_home"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/fill_button_gray"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Home"
            android:textAllCaps="false"
            android:textColor="@color/text"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="613dp" />

        <Button
            android:id="@+id/rescan_user"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_proceed_gray"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Scan Again"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="249dp"
            tools:layout_editor_absoluteY="614dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>